@model Developeram.DomainModel.Models.Article

@{
    ViewBag.Title = "ShowArticle";
}

<h1>@Model.Title</h1>
<img src="/Images/Articles/@Model.ImageName" title="@Model.Title" alt="@Model.Title" />
@Html.Raw(Model.ShortText)
@Html.Raw(Model.FullText)


@Html.Action("CreateComment", "Articles", new { id = Model.ArticleId })

<ul >
    @Html.Action("ShowComments", "Articles", new { id = Model.ArticleId })
</ul>

