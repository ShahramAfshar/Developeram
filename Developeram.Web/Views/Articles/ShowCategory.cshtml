@{
    IEnumerable<Article> articles = ViewBag.Articles as IEnumerable<Article>;


    if (articles.Any())
    {
        <ul>
            @foreach (var item in articles)
            {
                <li>
                    <a href="/@Model.TitleUrl/@item.ArticleId/@item.TitleUrl.Replace(" ","-")">@item.Title</a>
                </li>

            }
        </ul>
    }




}
