@model Developeram.DomainModel.Models.Group
@using Developeram.DomainModel.Models
@{
    ViewBag.Title = "ShowCategory";
}


@section StylesMeta{

    <meta name="author" content="@Model.MetaAuthor" />
    <meta name="description" content="@Model.MetaDescription" />
    <meta name="keywords" content="@Model.MetaKeywords" />
    <meta name="owner" content="@Model.MetaOwner" />

}

@section shortlink{


    <h3 class="subtitle">لینک کوتاه</h3>
    <div class="box-category">

        @{
            string link = "https://localhost:44368/g/" + Model.ShortLink;
        }
        <a href="@(link)">لینک کوتاه:  @("developram.ir/g/" + Model.ShortLink)</a>
    </div>
}

<h1 class="subtitle">@Model.Title</h1>

<img src="/Images/Groups/@Model.ImageName" title="@Model.Title" alt="@Model.Title" />
@Html.Raw(Model.ShortText)

@Html.Raw(Model.FullText)


<section class="border-radius tags-layer">
    @foreach (var item in Model.Tags)
    {

        <a href="/Articles/Search?q=@item.Title">@item.Title</a>
    }

</section>


